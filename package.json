{
    "name": "dashmips-debugger",
    "displayName": "dashmips-debugger",
    "description": "Debugs mips while executing in Dashmips interpreter",
    "version": "0.1.4",
    "license": "MIT",
    "publisher": "roadkillco",
    "repository": {
        "type": "git",
        "url": "https://github.com/nbbeeken/dashmips-debugger.git"
    },
    "icon": "images/dashmips-debugger-icon.png",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Debuggers"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onDebugResolve:mips",
        "onLanguage:mips"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "Dashmips Debugger",
                "properties": {
                    "dashmips.checkDashmipsExists": {
                        "type": "boolean",
                        "default": true,
                        "description": "Check to see if dashmips is installed, will offer to install if not"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "mips",
                "aliases": [
                    "MIPS",
                    "dashmips",
                    "mips"
                ],
                "extensions": [
                    ".mips",
                    ".dmips"
                ],
                "configuration": "./language/mips-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mips",
                "scopeName": "source.mips",
                "path": "./language/mips.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "mips",
                "path": "./language/mips-snippets.json"
            }
        ],
        "breakpoints": [
            {
                "language": "mips"
            }
        ],
        "debuggers": [
            {
                "type": "dashmips",
                "label": "Dashmips",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "languages": [
                    "mips"
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "host": {
                                "type": "string",
                                "description": "Host dashmips is running on",
                                "default": "localhost"
                            },
                            "port": {
                                "type": "number",
                                "description": "Port dashmips is running on",
                                "default": 2390
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Path to terminal",
                                "default": "${workspaceFolder}"
                            },
                            "program": {
                                "type": "string",
                                "description": "Path to mips file with main label",
                                "default": "${file}"
                            },
                            "registerFormat": {
                                "enum": [
                                    "hex",
                                    "bin",
                                    "oct",
                                    "dec"
                                ],
                                "type": "string",
                                "description": "Display registers in formats: 'hex' | 'oct' | 'dec' | 'bin'",
                                "default": "hex"
                            },
                            "console": {
                                "enum": [
                                    "integratedTerminal",
                                    "externalTerminal"
                                ],
                                "description": "Where to launch the debug target: integrated terminal, or external terminal.",
                                "default": "integratedTerminal"
                            },
                            "args": {
                                "type": "array",
                                "description": "Arguments for mips program",
                                "default": [],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "dashmipsArgs": {
                                "type": "array",
                                "description": "Arguments for dashmips debugger",
                                "default": [],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "dashmipsCommand": {
                                "type": "string",
                                "description": "The command used to launch dashmips debugger",
                                "default": "python -m dashmips debug"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Whether or not to stop on first line",
                                "default": false
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "host",
                            "port"
                        ],
                        "properties": {
                            "host": {
                                "type": "string",
                                "description": "Host dashmips is running on",
                                "default": "localhost"
                            },
                            "port": {
                                "type": "number",
                                "description": "Port dashmips is running on",
                                "default": 2390
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Whether or not to stop on first line",
                                "default": false
                            },
                            "registerFormat": {
                                "enum": [
                                    "hex",
                                    "bin",
                                    "oct",
                                    "dec"
                                ],
                                "type": "string",
                                "description": "Display registers in formats: 'hex' | 'oct' | 'dec' | 'bin'",
                                "default": "hex"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "dashmips",
                        "request": "launch",
                        "name": "Dashmips (Run Current File)",
                        "program": "${file}",
                        "registerFormat": "dec",
                        "cwd": "${workspaceFolder}",
                        "dashmipsCommand": "python -m dashmips debug",
                        "dashmipsArgs": [
                            "-i",
                            "localhost",
                            "-p",
                            "2390",
                            "-l"
                        ],
                        "stopOnEntry": false
                    },
                    {
                        "type": "dashmips",
                        "request": "attach",
                        "name": "Dashmips (Attach)",
                        "registerFormat": "dec",
                        "port": 2390,
                        "stopOnEntry": false
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Dashmips Debug: Launch",
                        "description": "A new configuration for 'debugging' a user selected mips file.",
                        "body": {
                            "type": "dashmips",
                            "request": "launch",
                            "name": "dashmips (Run Current File)",
                            "program": "^\"\\${file}\"",
                            "registerFormat": "dec",
                            "dashmipsCommand": "python -m dashmips debug",
                            "dashmipsArgs": [
                                "-l",
                                "-i",
                                "localhost",
                                "-p",
                                "2390"
                            ]
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "rimraf ./out && npm run build",
        "build": "tsc",
        "watch": "tsc --watch",
        "publish": "npx vsce publish",
        "pretest": "npm run build && npm run lint",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts --fix"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^14.0.13",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "chai": "^4.2.0",
        "eslint": "^7.2.0",
        "eslint-plugin-prettier": "^3.1.3",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "prettier": "2.0.5",
        "rimraf": "^3.0.2",
        "typescript": "^3.9.5",
        "utf-8-validate": "^5.0.2",
        "vsce": "^1.76.1",
        "vscode-debugadapter-testsupport": "^1.41.0",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.41.0",
        "vscode-debugprotocol": "^1.41.0"
    }
}
